    <script>
        // Simulation des mises à jour de prix et de variations
        // Les données sont purement fictives à des fins de démonstration.
        
        const updateInterval = 10000; // 10 secondes
        const cards = document.querySelectorAll('.crypto-card');

        // Fonction pour générer un nouveau prix et variation
        function simulateUpdate(priceText, changeText) {
            // On extrait le prix actuel
            const currentPrice = parseFloat(priceText.replace(/[^0-9.]/g, ''));
            // Génération d'une variation aléatoire entre -2% et +2%
            const variationPercent = (Math.random() * 4 - 2).toFixed(2);
            const newPrice = (currentPrice * (1 + variationPercent/100)).toFixed(2);

            return { newPrice, variationPercent };
        }

        function applyUpdate(card) {
            const priceEl = card.querySelector('.price');
            const changeEl = card.querySelector('.change');

            if (priceEl && changeEl) {
                const oldPrice = priceEl.textContent;
                const oldChange = changeEl.textContent;

                const { newPrice, variationPercent } = simulateUpdate(oldPrice, oldChange);

                // Mettre à jour le prix
                priceEl.textContent = `$${newPrice}`;
                
                // Mettre à jour le changement en pourcentage
                changeEl.textContent = (variationPercent > 0 ? `+${variationPercent}%` : `${variationPercent}%`);
                
                // Changer la classe de couleur selon la variation
                if (variationPercent > 0) {
                    changeEl.classList.remove('variation-negative');
                    changeEl.classList.add('variation-positive');
                } else {
                    changeEl.classList.remove('variation-positive');
                    changeEl.classList.add('variation-negative');
                }
            }
        }

        function updateAllPrices() {
            cards.forEach(card => applyUpdate(card));
        }

        // Mise à jour initiale après 10s, puis toutes les 10s
        setInterval(updateAllPrices, updateInterval);
    </script>
</body>
</html>
